{
  "name": "nestjs-trpc-turbo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "lint": "turbo lint",
    "prepare": "husky",
    "format": "prettier --write **/*.{js,ts,json,yml,yaml,md,mdx}"
},
  "devDependencies": {
    "turbo": "^2.5.4",
    "typescript": "5.8.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1"
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
     "**/*.{js,ts,json,yml,yaml,md,mdx}": [
         "prettier --write"
     ],
     "packages/nestjs-trpc/**/*.{js,ts}": [
         "pnpm --filter @nexica/nestjs-trpc lint"
     ]
  }
}
