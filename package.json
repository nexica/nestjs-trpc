{
    "name": "@nexica/nestjs-trpc",
    "version": "0.1.0",
    "description": "NestJS TRPC Bridge",
    "main": "dist/index.js",
    "bin": {
        "nestjs-trpc": "dist/index.js"
    },
    "types": "dist/index.d.ts",
    "keywords": [
        "nestjs",
        "trpc",
        "express",
        "zod",
        "typescript",
        "nestjs-trpc",
        "nestjs-trpc-bridge",
        "generate",
        "schema"
    ],
    "author": "Jamie Fairweather",
    "license": "MIT",
    "scripts": {
        "prepare": "husky",
        "lint": "eslint . **/*.ts --fix",
        "format": "prettier --write .",
        "build": "rimraf dist && pnpm lint && pnpm format && tsc --outDir dist",
        "start": "node dist/index.js",
        "generate": "node dist/index.js generate"
    },
    "peerDependencies": {
        "@nestjs/common": "^11.0.11",
        "@nestjs/core": "^11.0.11",
        "@trpc/server": "11.0.0-rc.833",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@eslint/js": "^9.21.0",
        "@types/express": "^5.0.0",
        "@types/glob": "^8.1.0",
        "@types/node": "^22.13.8",
        "commander": "^13.1.0",
        "eslint-config-prettier": "^10.0.2",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "rimraf": "^6.0.1",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.25.0"
    },
    "lint-staged": {
        "**/*.ts": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "dependencies": {
        "@golevelup/nestjs-discovery": "^4.0.3",
        "type-fest": "^4.37.0",
        "reflect-metadata": "^0.2.2",
        "ts-morph": "^25.0.1",
        "glob": "^11.0.1",
        "trpc-ui": "^1.0.15"
    }
}
