    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,yml,yaml,md,mdx}": [
      "prettier --write"
    ],
    "packages/nestjs-trpc/**/*.{js,jsx,ts,tsx}": [
      "pnpm --filter @nexica/nestjs-trpc lint"
    ]
  }
