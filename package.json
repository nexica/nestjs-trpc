{
  "name": "nestjs-trpc-turbo",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "start": "turbo start",
    "build": "turbo build",
    "lint": "turbo lint",
    "prepare": "husky",
    "format": "prettier --write **/*.{js,jsx,ts,tsx,json,yml,yaml,md,mdx}"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
